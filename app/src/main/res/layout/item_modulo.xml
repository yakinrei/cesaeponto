<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:background="@color/cor_recyclerView"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/cor_recyclerView">
    <!-- Curso (primeiro TextView) -->
    <TextView
        android:id="@+id/curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Curso"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <!-- Módulos (segundo TextView) -->
    <TextView
        android:id="@+id/modulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="19sp"
        android:text="Módulos"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/curso"
        android:layout_marginTop="10dp"/>

    <!-- Polo (terceiro TextView) -->
    <TextView
        android:id="@+id/polo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Polo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/modulos"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>